@model DieteticSNS.Application.Models.Users.Commands.AddUserRoles.AddUserRolesCommand

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-between align-items-center">
    <div class="col-auto">
        <h3>Add user to roles</h3>
    </div>
    <div class="col-auto">
        <a asp-controller="Users" asp-action="GetUserList" class="btn btn-dark">Back to list</a>
    </div>
</div>

<hr class="my-4">

<div class="jumbotron">
    <form method="post" autocomplete="off">
        <div class="row">
            <div class="col-auto">
                <input asp-for="Id" hidden />
                @for (int i = 0; i < Model.UserRoles.Count; i++)
                {
                    <div class="custom-control custom-switch">
                        <input asp-for="@Model.UserRoles[i].IsSelected" type="checkbox" class="custom-control-input">
                        <label asp-for="@Model.UserRoles[i].IsSelected" class="custom-control-label">@Model.UserRoles[i].RoleName</label>
                    </div>
                    <input asp-for="@Model.UserRoles[i].RoleName" hidden />
                }
            </div>
        </div>
        <div class="row">
            <div class="col-auto mt-4">
                <button type="submit" class="btn btn-sm btn-dark">Submit</button>
            </div>
        </div>
    </form>
</div>

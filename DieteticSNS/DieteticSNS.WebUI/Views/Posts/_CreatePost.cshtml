@model DieteticSNS.Application.Models.Posts.Commands.CreatePost.CreatePostCommand

<form id="createPostForm" asp-controller="Posts" asp-action="CreatePost" autocomplete="off" enctype="multipart/form-data" data-ajax="true"  data-ajax-method="post" data-ajax-mode="replace" data-ajax-update="#createPostForm" data-ajax-success="updateWallView">
    <div class="card my-4">
        <div class="card-body pb-2">
            <div class="form-group row">
                <div class="col-2 text-right">
                    <label asp-for="Title" for="Title" class="col-form-label"><b>Title</b></label>
                </div>
                <div class="col-10">
                    <input asp-for="Title" type="text" class="form-control" placeholder="Enter title">
                    <span asp-validation-for="Title"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-right">
                    <label asp-for="Description" for="description" class="col-form-label"><b>Description</b></label>
                </div>
                <div class="col-10">
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Say something here"></textarea>
                    <span asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2 text-right">
                    <label asp-for="Photo" for="photo" class="col-form-label"><b>Photo</b></label>
                </div>
                <div class="col pr-1">
                    <div class="custom-file">
                        <input asp-for="Photo" type="file" id="photo" class="form-control custom-file-input" accept="image/*">
                        <label class="custom-file-label">Choose file...</label>
                    </div>
                    <span asp-validation-for="Photo"></span>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-dark px-3">Post <i class="fas fa-globe-americas"></i></button>
                </div>
            </div>
        </div>
    </div>
</form>

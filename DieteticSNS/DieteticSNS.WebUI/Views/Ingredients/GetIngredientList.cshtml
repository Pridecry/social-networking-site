@model DieteticSNS.Application.Models.Ingredients.Queries.GetIngredientsList.IngredientListModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-between align-items-center">
    <div class="col-auto">
        <h3>Ingredients</h3>
    </div>
    <div class="col-auto">
        <a asp-controller="Ingredients" asp-action="CreateIngredient" class="btn btn-dark">Create ingredient</a>
    </div>
</div>

<hr class="my-4">

<table class="table table-striped table-bordered datatable" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Protein</th>
            <th>Carbohydrate</th>
            <th>Fat</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ingredients)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Protein</td>
                <td>@item.Carbohydrate</td>
                <td>@item.Fat</td>
                @*<td class="py-1 px-0">
                    <button asp-controller="Ingredients" asp-action="UpdateIngredient" asp-route-id="@item.Id" class="btn btn-link">Update</button>
                        <span>|</span>
                        <form asp-controller="Ingredients" asp-action="DeleteIngredient" asp-route-id="@item.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-link">Delete</button>
                        </form>
                </td>*@
                <td class="py-2 px-0">
                    <a asp-controller="Ingredients" asp-action="UpdateIngredient" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm ml-3 mr-1">Update <i class="far fa-edit"></i></a>
                    
                    <form asp-controller="Ingredients" asp-action="DeleteIngredient" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete <i class="far fa-trash-alt"></i></button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Protein</th>
            <th>Carbohydrate</th>
            <th>Fat</th>
            <th>Action</th>
        </tr>
    </tfoot>
</table>

@model DieteticSNS.Application.Models.Ingredients.Queries.GetIngredientsList.IngredientListVm

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-between align-items-center">
    <div class="col-auto">
        <h3>Ingredients</h3>
    </div>
    <div class="col-auto">
        <a asp-controller="Ingredients" asp-action="CreateIngredient" class="btn btn-dark">Create ingredient</a>
    </div>
</div>

<hr class="my-4">

<table class="table table-striped table-bordered datatable" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Protein</th>
            <th>Carbohydrate</th>
            <th>Fat</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ingredients)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Protein</td>
                <td>@item.Carbohydrate</td>
                <td>@item.Fat</td>
                <td class="py-2 px-0">
                    <a asp-controller="Ingredients" asp-action="UpdateIngredient" asp-route-id="@item.Id" class="btn btn-outline-dark btn-sm ml-3 mr-1">Update <i class="far fa-edit"></i></a>

                    <form asp-controller="Ingredients" asp-action="DeleteIngredient" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="button" class="btn btn-outline-danger btn-sm" data-toggle="modal" data-target="@("#deleteModal_"+item.Id)">Delete <i class="far fa-trash-alt"></i></button>

                        <div class="modal fade" id="@("deleteModal_"+item.Id)" tabindex="-1">
                            <div class="modal-dialog modal-sm modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Delete confirmation</h5>
                                        <button type="button" class="close" style="outline: none" data-dismiss="modal"><span>&times;</span></button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure to delete this item?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button type="submit" class="btn btn-danger">Delete</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th>Name</th>
            <th>Protein</th>
            <th>Carbohydrate</th>
            <th>Fat</th>
            <th>Action</th>
        </tr>
    </tfoot>
</table>

@section Scripts
{
    <script src="~/js/datatable.js"></script>
}

@model DieteticSNS.WebUI.Models.Account.RegisterViewModel

@{
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}

<form method="post" autocomplete="off">
    <h3 class="text-center pb-3 text-secondary">CREATE A NEW ACCOUNT</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group row">
        <div class="col">
            <input asp-for="FirstName" type="text" class="form-control form-control-lg" placeholder="First name">
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="col">
            <input asp-for="LastName" type="text" class="form-control form-control-lg" placeholder="Last name">
            <span asp-validation-for="LastName"></span>
        </div>
        </div>
    <div class="form-group">
        <input asp-for="Email" type="email" class="form-control form-control-lg" placeholder="Email">
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Password">
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg" placeholder="Confirm Password">
        <span asp-validation-for="ConfirmPassword"></span>
    </div>
    <button type="submit" class="btn btn-secondary mt-3 px-3"><i class="fas fa-user-plus mr-1"></i> Register</button>
    <h5 class="text-center text-secondary pt-5">
        Already have an account?
        <a asp-controller="Account" asp-action="Login">Sign in</a>
    </h5>
</form>
